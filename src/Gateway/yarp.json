{
  "ReverseProxy": {
    "Routes": {
      "orders-route": {
        "ClusterId": "orders-cluster",
        "Match": { "Path": "/api/v1/orders/{**catchall}" }
      },
      "orders-root-route": {
        "ClusterId": "orders-cluster",
        "Match": { "Path": "/api/v1/orders" }
      },
      "products-route": {
        "ClusterId": "products-cluster",
        "Match": { "Path": "/api/v1/products/{**catchall}" }
      },
      "products-root-route": {
        "ClusterId": "products-cluster",
        "Match": { "Path": "/api/v1/products" }
      },
      "bff-route": {
        "ClusterId": "bff-cluster",
        "Match": { "Path": "/bff/{**catchall}" }
      },
      "bff-callback-route": {
        "ClusterId": "bff-cluster",
        "Match": { "Path": "/signin-oidc" }
      }
    },
    "Clusters": {
      "orders-cluster": {
        "Destinations": {
          "orderservice": { "Address": "http://localhost:5000/" }
        }
      },
      "products-cluster": {
        "Destinations": {
          "productservice": { "Address": "http://localhost:5002/" }
        }
      },
      "bff-cluster": {
        "Destinations": {
          "bff": { "Address": "http://localhost:8081/" }
        }
      }
    }
  }
}
