{
  "realm": "turkcell-ai",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "rememberMe": true,
  "revokeRefreshToken": true,
  "refreshTokenMaxReuse": 0,
  "accessTokenLifespan": 900,
  "ssoSessionIdleTimeout": 1800,
  "offlineSessionIdleTimeout": 2592000,
  "roles": {
    "realm": [
      { "name": "orders:order:create" },
      { "name": "orders:order:read" },
      { "name": "orders:order:update_status" },
      { "name": "products:product:create" },
      { "name": "products:product:read" },
      { "name": "products:product:update" },
      { "name": "products:product:delete" }
    ]
  },
  "clientScopes": [
    {
      "name": "permissions",
      "description": "Expose realm roles as 'permissions' claim",
      "protocol": "openid-connect",
      "attributes": { "include.in.token.scope": "true" },
      "protocolMappers": [
        {
          "name": "realm-roles-to-permissions",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "usermodel.realmRoleMapping.rolePrefix": "",
            "claim.name": "permissions",
            "jsonType.label": "String"
          }
        }
      ]
    }
  ],
  "defaultDefaultClientScopes": [
    "permissions",
    "profile",
    "email",
    "roles",
    "web-origins"
  ],
  "clients": [
    {
      "clientId": "gateway",
      "protocol": "openid-connect",
      "publicClient": true,
      "redirectUris": [
        "http://localhost:5000/*",
        "http://localhost:5173/*",
        "http://localhost:8081/*"
      ],
      "webOrigins": ["*"],
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "defaultClientScopes": ["permissions", "profile", "email"]
    },
    {
      "clientId": "orderservice",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "changeme-orderservice",
      "standardFlowEnabled": false,
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": false,
      "clientAuthenticatorType": "client-secret",
      "defaultClientScopes": ["permissions"]
    },
    {
      "clientId": "productservice",
      "protocol": "openid-connect",
      "publicClient": false,
      "secret": "changeme-productservice",
      "standardFlowEnabled": false,
      "serviceAccountsEnabled": true,
      "directAccessGrantsEnabled": false,
      "clientAuthenticatorType": "client-secret",
      "defaultClientScopes": ["permissions"]
    }
  ]
}
