<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <!-- Minimal NuGet configuration for container builds -->
  <packageSources>
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>
  <!-- Use a Linux path inside container and avoid Windows-specific fallbacks -->
  <config>
    <add key="globalPackagesFolder" value="/root/.nuget/packages" />
  </config>
  <fallbackPackageFolders>
    <!-- Intentionally empty to prevent referencing Visual Studio fallback paths -->
  </fallbackPackageFolders>
</configuration>